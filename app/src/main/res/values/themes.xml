<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyAppDesign" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:textViewStyle">@style/Theme.MyAppDesign.TextView</item>

    </style>

    <style name="Theme.MyAppDesign.TextView">
        <item name="android:textSize">25sp</item>


    </style>

    <style name="TextViewStyle" parent="TextViewStyle" tools:ignore="ResourceCycle">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#5EADED</item>

    </style>

</resources>

